<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">


    <ImageView
        android:id="@+id/sports_image_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        tools:srcCompat="@drawable/img_baseball" />

    <TextView
        android:id="@+id/sportsTitle_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sports_image_detail"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        style="@style/sportsTitle"
        android:padding="8dp"
        android:text="@string/title_placeholder"
        android:textColor="?android:textColorSecondary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" />


    <TextView
        android:id="@+id/newsTitle_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sports_image_detail"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:text="@string/news_placeholder" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/newsTitle_detail"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/newsInfo_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            style="@style/sportsDetailText"
            tools:text="@string/lorem_ipsum"
            android:textAlignment="center" />

    </ScrollView>




</RelativeLayout>